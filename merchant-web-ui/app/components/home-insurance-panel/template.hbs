<div class="{{if (and didValidate (v-get person 'isInvalid')) 'panel-has-error'}} panel-heading panel-hover" {{action 'toggleColapse'}}>
  <i class="fa fa-home"/> Home insurance information
  <span {{action attrs.remove}} class="remove-btn pull-right fa fa-times fa-lg"/>
</div>
<div class="panel-body {{unless isShown 'hidden'}}">
  {{validated-input model=model valuePath='ownerFullName' placeholder='Full name'}}
  {{validated-input model=model valuePath='ownerIdNumber' placeholder='Personal number'}}
  {{validated-input type="date" model=model valuePath='startDate' placeholder='Start date'}}
  {{validated-input type="date" model=model valuePath='endDate' placeholder='End date'}}
  {{validated-input model=model valuePath='homeValueEstimate' placeholder='Value estimate'}}
  {{validated-input model=model valuePath='homeAddress' placeholder='Address'}}
  {{validated-input model=model valuePath='homeArea' placeholder='Area in mÂ²'}}
  {{validated-input model=model valuePath='homeAge' placeholder='Age of the home'}}
  <div class="form-inline">
    <div class="form-group">
      {{input id='cbox_fire_insurance' type='checkbox' class='css-checkbox' checked=model.fireInsurance}}
      <label for="cbox_fire_insurance" class="css-label">Fire insurance</label>
    </div>
    <div class="form-group">
      {{input id='cbox_flood_insurance' type='checkbox' class='css-checkbox' checked=model.floodInsurance}}
      <label for="cbox_flood_insurance" class="css-label">Flood insurance</label>
    </div>
    <div class="form-group">
      {{input id='cbox_burglary_insurance' type='checkbox' class='css-checkbox' checked=model.burglaryInsurance}}
      <label for="cbox_burglary_insurance" class="css-label">Burglary insurance</label>
    </div>
    <div class="has-error">
      {{#if (and (not model.isValidPolicy) didValidate)}}
        <div class="help-block">
          At least one option must be selected.
        </div>
      {{/if}}
    </div>
  </div>
</div>
