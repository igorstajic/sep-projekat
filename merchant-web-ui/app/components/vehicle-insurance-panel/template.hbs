<div class="panel-heading">
  Vehicle insurance information
  <span {{action attrs.remove}} class="remove-btn pull-right glyphicon glyphicon-remove"/>
</div>
<div class="panel-body">
  {{validated-input model=model valuePath="ownerFullName" placeholder="Full name"}}
  {{validated-input model=model valuePath="ownerIdNumber" placeholder="JMBG"}}
  {{validated-input model=model valuePath="startDate" placeholder="Start date"}}
  {{validated-input model=model valuePath="endDate" placeholder="End date"}}
  {{validated-input model=model valuePath="vehicleType" placeholder="Type of the vehicle"}}
  {{validated-input model=model valuePath="yearManufactured" placeholder="Year of manufacturing"}}
  {{validated-input model=model valuePath="registrationNumber" placeholder="Registration number"}}
  {{validated-input model=model valuePath="chassisNumber" placeholder="Chassis number"}}
  <div class="form-inline">
  <div class="form-group">
    {{input id="cbox_repair_services" type="checkbox" class="form-control" checked=model.repairServices}}
    <label for="cbox_repair_services">Repair services (up to 500 â‚¬)</label>
  </div>
  <div class="form-group">
    {{input id="cbox_towing_services" type="checkbox" class="form-control" checked=model.towingServices}}
    <label for="cbox_towing_services">Towing services (up to 100km)</label>
  </div>
  <div class="form-group">
    {{input id="cbox_hotel_accomodation" type="checkbox" class="form-control" checked=model.hotelAccomodation}}
    <label for="cbox_hotel_accomodation">Hotel accomodation (up to 3 days)</label>
  </div>
  <div class="form-group">
    {{input id="cbox_alternative_transport" type="checkbox" class="form-control" checked=model.alternativeTransport}}
    <label for="cbox_alternative_transport">Require alternative transport</label>
  </div>
  </div>
</div>
